
<form method="POST" class="emailPrefForm" action="{{ action }}">

    <input type="hidden" name="token" value="{{ token }}" />
    <input type="hidden" name="uselang" id="uselang" value="{{ uselang }}" />
    <input type="hidden" name="contact_hash" value="{{contact_hash}}" />
    <input type="hidden" name="contact_id" value="{{contact_id}}" />
	<h3 class="epc-form-col-content-heading-2">Hi, {{ first_name }}</h3>
	<div>
		<input id="email" name="email" value="{{email}}" class="emailPrefChangeEmailInput hide"/>
		<span id="notEditable">
		 {{email}}
		<input type="button" value="[{{ l10n "emailpreferences-change-email" }}]" class="emailPrefChangeEmailTextButton">
		</span>
	</div>
	<h3 class="epc-form-col-content-heading">{{ l10n "emailpreferences-title" }}</h3>
    <div>
        <label for="country">{{ l10n "emailpreferences-country" }}</label>
        <select id="country" name="country" title="{{ l10n "emailpreferences-country" }}"
            autocomplete="off" >
            {{# countries }}
            <option value="{{ code }}" {{# selected }}selected {{/ selected }}>{{ name }}</option>
            {{/ countries }}
        </select>
    </div>

    <div>
        <label for="language">{{ l10n "emailpreferences-language" }}</label>

        <select id="language" name="language" title="{{ l10n "emailpreferences-language" }}"
            autocomplete="off" >
            {{# languages }}
            <option value="{{ code }}" {{# selected }}selected {{/ selected }}>{{ name }}</option>
            {{/ languages }}
        </select>
    </div>

    <div>
        <input type="radio" id="sendEmail" name="send_email" value="true" autocomplete="off"
            {{# sendEmail }}checked {{/ sendEmail }}>
         <label for="sendEmail">{{ l10n "emailpreferences-send-email" }}</label>
    </div>

    <div>
        <input type="radio" id="dontSendEmail" name="send_email" value="false" autocomplete="off"
            {{# dontSendEmail }}checked {{/ dontSendEmail }}>
         <label for="dontSendEmail">{{ l10n "emailpreferences-dont-send-email" }}</label>
    </div>

    <button type="submit" name="submit" id="save" value="save" >{{ l10n "emailpreferences-save" }}</button>
</form>
