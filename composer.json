{
	"name": "wikimedia/donation-interface",
	"description": "Wikimedia Foundation payment processing library",
	"license": "GPL-2.0-or-later",
	"support": {
		"irc": "irc://irc.libera.chat/wikimedia-fundraising"
	},
	"autoload": {
		"classmap": [
			"adyen_gateway",
			"amazon_gateway",
			"dlocal_gateway",
			"gravy_gateway",
			"extras",
			"gateway_common",
			"gateway_forms",
			"ingenico_gateway",
			"paypal_ec_gateway",
			"DonationInterface.class.php"
		]
	},
	"require": {
		"maxmind/minfraud": "^1.22",
		"geoip2/geoip2": "^2.13",
		"monolog/monolog": "^2.0",
		"relisten/forceutf8": "^1.1",
		"php": ">=8.0",
		"predis/predis": "^1.1",
		"psr/log": "^1.0",
		"amzn/login-and-pay-with-amazon-sdk-php": "^2.5",
		"symfony/yaml": "^4|^5",
		"wikimedia/smash-pig": "0.9.0",
		"addshore/psr-6-mediawiki-bagostuff-adapter": "0.1",
		"ext-json": "*",
		"whichbrowser/parser": "^2.1"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "46.0.0",
		"mediawiki/mediawiki-phan-config": "0.15.1",
		"mediawiki/minus-x": "1.1.3",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0",
		"wikimedia/remex-html": "^4.1.0",
		"wikimedia/testing-access-wrapper": "~1.0"
	},
	"repositories": [
		{
			"type": "git",
			"url": "https://github.com/ejegg/login-and-pay-with-amazon-sdk-php"
		}
	],
	"config": {
		"optimize-autoloader": true,
		"prepend-autoloader": false,
		"platform": {
			"php": "8.2.26"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"phpcs": "phpcs -p -s --cache",
		"phan": "phan -d . --long-progress-bar",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"@phpcs",
			"php tests/phpunit/LintYaml.php",
			"minus-x check ."
		]
	}
}
